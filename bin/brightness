#!/bin/sh

MAX=`cat /sys/class/backlight/intel_backlight/max_brightness`

if [ -z "$1" ]; then
    CUR=`cat /sys/class/backlight/intel_backlight/brightness`
    echo $(( CUR * 100 / MAX ))
else
    PCT=$1
    echo $(( MAX * PCT / 100 )) | sudo tee /sys/class/backlight/intel_backlight/brightness > /dev/null
fi
