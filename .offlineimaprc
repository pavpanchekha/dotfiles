[general]
ui = ttyui
accounts = pavpanchekha.com
fsync = False
ignore-readonly = no

[Account pavpanchekha.com]
localrepository = pavpanchekha-local
remoterepository = pavpanchekha-remote
status_backend = sqlite
autorefresh=3
quick=5
#postsynchook = notmuch new

[Repository pavpanchekha-local]
type = Maildir
localfolders = ~/mail/
nametrans = lambda folder: {'drafts':  '[Gmail]/Drafts',
                            'sent':    '[Gmail]/Sent Mail',
                            'flagged': '[Gmail]/Starred',
                            'archive': '[Gmail]/Important',
                            'chats':   '[Gmail]/Chats',
                            'trash':   '[Gmail]/Trash',
                            'all': '[Gmail]/All Mail',
                            }.get(folder, folder)
                            
[Repository pavpanchekha-remote]
maxconnections = 1
type = Gmail
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
remoteuser = me@pavpanchekha.com
realdelete = no
nametrans = lambda folder: {'[Gmail]/Drafts':    'drafts',
                            '[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'flagged',
                            '[Gmail]/Important': 'archive',
                            '[Gmail]/Chats':     'chats',
                            '[Gmail]/Trash':     'trash',
                            '[Gmail]/All Mail':  'all',
                            }.get(folder, folder)
folderfilter = lambda folder: folder not in ['[Gmail]/Trash',
                                             '[Gmail]/All Mail',
                                             '[Gmail]/Spam',
                                             '[Gmail]/Chats',
                                             ] and \
                              not folder.startswith("lists")
