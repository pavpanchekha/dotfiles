MAILDIR=$HOME/mail/
DEFAULT=$MAILDIR/inbox.spool
LOGFILE=/tmp/procmail.log


:0
* ^(To|Cc): .*reuse@mit.edu
{
    :0f
    | formail -a 'X-RMAIL-KEYWORDS: reuse'
    
    :0:
    archive.spool
}

