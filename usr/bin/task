#!/bin/bash

if [[ $# -eq 0 ]]; then
    cat ~/notes/index.wiki | tail -n +2 | head -n -1 | cut -c4-
elif [[ "$1" == "-h" ]]; then
    echo "Manage tasks"
    echo
    echo "USAGE: task           Print list of tasks"
    echo "     | task <task>    Add new task"
else
    echo -e "`head -n1 ~/notes/index.wiki`\n    * $@\n`cat ~/notes/index.wiki | tail -n +2`" > ~/notes/index.wiki
fi

