#!/bin/bash

if [ "x$1" == "x-h" ]; then
    echo "Cleans transient files out of a file tree"
    echo
    echo "USAGE: clean"
else
    find -name "*.pyc" -delete
    find -name "*~" -delete
    find -name "*.class" -delete
    find -name "#*#" -delete
    find -name "desktop.ini" -delete
    find -name "Thumbs.db" -delete
fi
