#!/usr/bin/env python2.7

import sys

if len(sys.argv) > 1 and sys.argv[1] == "-h":
    print "Print default text"
    print
    print "USAGE: orprint <args>        Print stdin unless it is empty; then print <args>"
else:
    anything = False
    for line in sys.stdin:
        sys.stdout.write(line)
        anything = True

    if not anything:
        print " ".join(sys.argv[1:])
